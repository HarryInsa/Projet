//Bibliothèques
import javax.swing.*;
import java.awt.*;
import java.awt.event.* ;

public class FenetreFin extends JFrame implements ActionListener{
	
	//Attributs
	public JButton rejoue;
	public JButton quitter;
    public ImageIcon icon;
	
	public FenetreFin (int coups, int temps){
		
		//Initialisation de la fenetre
		this.setTitle("Fin de la partie");
		this.setSize(480,480);
		this.setLocationRelativeTo(null);
		this.setResizable(false);
		
		//Fond
		JPanel fond = new JPanel ();
		fond.setBounds(0,0,400,400);
		fond.setLayout(null);
		this.add(fond);
        
		
		//Etiquette du temps
		JLabel temp = new JLabel();
		temp.setBounds(350,80, 80, 50);
        fond.setForeground(Color.WHITE);
		fond.add(temp);
		
		//Définition du temps
		int minutes = (int)(temps/60);
		int secondes = (int)(temps-minutes*60);
		
		if(minutes < 1){
			temp.setText(secondes + " secs");
		}else if(minutes == 1){
			temp.setText(minutes + " min " + secondes + " secs");
		}else{
			temp.setText(minutes + " min " + secondes + " secs");
		}
		
		//Etiquette fin
		JLabel fin = new JLabel("Bravo !\n Vous avez gagné en " + coups + " coups avec un temps de ");
		fin.setBounds(50,50,300,100);
		fin.setForeground(Color.white);
		fond.add(fin);
		
		//Bouton nouvelle partie
		rejoue = new JButton ("Rejouer !");
		rejoue.setBounds(330, 380, 100, 50);
		rejoue.addActionListener(this);
		fond.add(rejoue);
		
		//Bouton quitter
		quitter = new JButton ("Quitter !");
		quitter.setBounds(50, 380, 90, 50);
        quitter.setForeground(Color.red);
		quitter.addActionListener(this);
		fond.add(quitter);
		
        icon = new ImageIcon("./fin.png");
        JLabel image = new JLabel(icon,JLabel.CENTER);
        image.setSize(480,480);
        fond.add(image);
        
		this.setVisible(true);
	}	
	
	public void actionPerformed (ActionEvent e){
		if(e.getSource() == rejoue){
			//Ferme cette fenetre
			this.dispose();
			
		}	
		if(e.getSource() == quitter){
			//Ferme toute les fenetres 
			System.exit(0);
		}	
	}	
}	
