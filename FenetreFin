import javax.swing.*;
import java.awt.*;
import java.awt.event.* ;

public class FenetreFin extends JFrame implements ActionListener{
	
	
	public FenetreFin (int coups, String temps){	//Ajouter temps mis pour gagner
		//Paramètres de la fenetre
		this.setTitle("FIN DE LA PARTIE");
		this.setSize(400,400);
		
		// Pour placer la fenêtre au centre de l'écran
		this.setLocationRelativeTo(null);
		
		// Pour empêcher le redimensionnement de la fenêtre
		this.setResizable(false);
		
		//Fond
		JPanel fond = new JPanel ();
		fond.setBounds(0,0,400,400);
		fond.setLayout(null);
		fond.setBackground(Color.pink);
		this.add(fond);
		
		//Etiquette fin
		JLabel fin = new JLabel("VOUS AVEZ GANGEZ EN " + coups + " COUPS EN "+ temps +" secondes !!!");
		fin.setBounds(50,50,300,50);
		fin.setForeground(Color.white);
		fond.add(fin);
		
		this.setVisible(true);
	}	
	
	public void actionPerformed (ActionEvent e){
		
	}	
}	
