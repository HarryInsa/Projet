//Bibliothèques
import javax.swing.*;
import java.awt.*;
import java.awt.event.* ;

public class FenetreFin extends JFrame implements ActionListener{
	
	//Attributs
	public JButton rejoue;
	public JButton quitter;
    public ImageIcon icon;
    public Font police;
    public Font policeBravo;
    public JLabel temp;
    public int temps;
	
	public FenetreFin (int coups, int temps){
		
		this.temps = temps;
		
		//Initialisation de la fenetre
		this.setTitle("Fin de la partie");
		this.setSize(480,480);
		this.setLocationRelativeTo(null);
		this.setResizable(false);
		
		police = new Font(" Arial " , Font.PLAIN , 12);
		policeBravo = new Font(" Arial " , Font.PLAIN , 24);
		
		//Fond
		JPanel fond = new JPanel ();
		fond.setBounds(0,0,400,400);
		fond.setLayout(null);
		this.add(fond);
        
		
		//Etiquette du temps
		temp = new JLabel();
		temp.setBounds(250,110, 80, 50);
		temp.setFont(police);
        temp.setForeground(Color.WHITE);
		fond.add(temp);
		calculTemps();
		
		
		//Etiquette coups
		JLabel coup = new JLabel("Vous avez gagné en " + coups + " coups");
		coup.setBounds(155,60,300,100);
		coup.setFont(police);
		coup.setForeground(Color.white);
		fond.add(coup);
		
		//Etiquette Bravo
		JLabel bravo = new JLabel("Bravo");
		bravo.setBounds(205,50,100,50);
		bravo.setFont(policeBravo);
		bravo.setForeground(Color.white);
		fond.add(bravo);
		
		//Etiquette tempsmis
		JLabel tempsmis = new JLabel("Vous avez mis ");
		tempsmis.setBounds(155,110,300,50);
		tempsmis.setFont(police);
		tempsmis.setForeground(Color.white);
		fond.add(tempsmis);
		
		//Bouton nouvelle partie
		rejoue = new JButton ("Rejouer !");
		rejoue.setBounds(330, 380, 100, 50);
		rejoue.addActionListener(this);
		fond.add(rejoue);
		
		//Bouton quitter
		quitter = new JButton ("Quitter !");
		quitter.setBounds(50, 380, 90, 50);
        quitter.setForeground(Color.red);
		quitter.addActionListener(this);
		fond.add(quitter);
		
        icon = new ImageIcon("./fin.png");
        JLabel image = new JLabel(icon,JLabel.CENTER);
        image.setSize(480,480);
        fond.add(image);
        
		this.setVisible(true);
	}	
	
	public void actionPerformed (ActionEvent e){
		if(e.getSource() == rejoue){
			//Ferme cette fenetre
			this.dispose();
			
		}	
		if(e.getSource() == quitter){
			//Ferme toute les fenetres 
			System.exit(0);
		}	
	}
	
	public void calculTemps (){
		//Définition du temps
		int minutes = (int)(temps/60);
		int secondes = (int)(temps-minutes*60);
		
		if(minutes < 1){
            if(secondes==1 || secondes == 0){
                temp.setText(secondes + " sec");
            }else{
                temp.setText(secondes + " secs");
            }
		}else if(minutes == 1){
            if(secondes==1){
                temp.setText(minutes + " min " + secondes + " sec");
            }else if (secondes == 0){
				temp.setText(minutes + " min ");
			}else{
				
                temp.setText(minutes + " min " + secondes + " secs");
            }
		}else{
			temp.setText(minutes + " mins " + secondes + " secs");
		}
	}		
}	
